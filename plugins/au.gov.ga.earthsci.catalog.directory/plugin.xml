<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="au.gov.ga.earthsci.intent.filters">
      <filter
            class="au.gov.ga.earthsci.catalog.directory.DirectoryCatalogIntentHandler"
            priority="0"
            returns-result="true"
            label="Directory catalog"
            description="Catalog listing the layers within a file-system directory"
            prompt="true">
         <return-type
               class="au.gov.ga.earthsci.catalog.directory.DirectoryCatalogTreeNode">
         </return-type>
         <uri
               authority="*"
               path="*/"
               scheme="file">
         </uri>
      </filter>
   </extension>

</plugin>
