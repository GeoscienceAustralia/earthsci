<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="au.gov.ga.earthsci.layer.hudLayers" name="Heads Up Display Layer" schema="schema/au.gov.ga.earthsci.layer.hudLayers.exsd"/>
   <extension-point id="au.gov.ga.earthsci.layers" name="Layers" schema="schema/au.gov.ga.earthsci.layers.exsd"/>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.xml"
            file-extensions="xml"
            id="au.gov.ga.earthsci.layer.xml"
            name="XML layer definition"
            priority="normal">
         <describer
               class="org.eclipse.core.runtime.content.XMLRootElementContentDescriber2">
            <parameter
                  name="element"
                  value="{}Layer">
            </parameter>
         </describer>
      </content-type>
      <content-type
            base-type="org.eclipse.core.runtime.xml"
            file-extensions="xml"
            id="au.gov.ga.earthsci.elevationmodel.xml"
            name="XML elevation model definition"
            priority="normal">
         <describer
               class="org.eclipse.core.runtime.content.XMLRootElementContentDescriber2">
            <parameter
                  name="element"
                  value="{}ElevationModel">
            </parameter>
         </describer>
      </content-type>
      <content-type
            file-extensions="kml,kmz"
            id="au.gov.ga.earthsci.layer.kml"
            name="KML layer"
            priority="normal">
      </content-type>
   </extension>
   <extension
         point="au.gov.ga.earthsci.injectables">
      <injectable
            class="au.gov.ga.earthsci.layer.worldwind.WorldWindConfiguration"
            priority="0">
      </injectable>
      <inject
            class="au.gov.ga.earthsci.layer.worldwind.WorldWindModel"
            priority="0">
         <type
               class="au.gov.ga.earthsci.layer.worldwind.WorldWindModel">
         </type>
         <type
               class="au.gov.ga.earthsci.layer.worldwind.ITreeModel">
         </type>
      </inject>
   </extension>
   <extension
         point="au.gov.ga.earthsci.intent.filters">
      <filter
            class="au.gov.ga.earthsci.layer.intent.ClassLayerIntentHandler"
            priority="0"
            returns-result="true">
         <return-type
               class="gov.nasa.worldwind.layers.Layer">
         </return-type>
         <uri
               scheme="class">
         </uri>
      </filter>
      <filter
            class="au.gov.ga.earthsci.layer.intent.LayerXmlIntentHandler"
            priority="0"
            returns-result="true">
         <return-type
               class="gov.nasa.worldwind.layers.Layer">
         </return-type>
         <content-type
               id="au.gov.ga.earthsci.layer.xml">
         </content-type>
         <content-type
               id="au.gov.ga.earthsci.elevationmodel.xml">
         </content-type>
      </filter>
      <filter
            class="au.gov.ga.earthsci.layer.intent.KmlLayerIntentHandler"
            priority="0"
            returns-result="true">
         <return-type
               class="gov.nasa.worldwind.layers.Layer">
         </return-type>
         <content-type
               id="au.gov.ga.earthsci.layer.kml">
         </content-type>
      </filter>
   </extension>
   <extension
         point="au.gov.ga.earthsci.layers">
      <wrapper
            class="au.gov.ga.earthsci.layer.wrappers.DefaultLayerWrapper"
            id="DefaultLayerWrapper"
            wraps="gov.nasa.worldwind.layers.Layer">
      </wrapper>
      <wrapper
            class="au.gov.ga.earthsci.layer.wrappers.SkyGradientLayerWrapper"
            id="SkyGradientLayerWrapper"
            wraps="gov.nasa.worldwind.layers.SkyGradientLayer">
      </wrapper>
      <wrapper
            class="au.gov.ga.earthsci.layer.wrappers.TiledImageLayerWrapper"
            id="TiledImageLayerWrapper"
            wraps="gov.nasa.worldwind.layers.TiledImageLayer">
      </wrapper>
   </extension>

</plugin>
