<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="au.gov.ga.earthsci.ui.application.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="au.gov.ga.earthsci.ui.application.Perspective"
            id="au.gov.ga.earthsci.ui.application.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         name="EarthSci"
         point="org.eclipse.core.runtime.products">
      <product
            application="au.gov.ga.earthsci.ui.application"
            name="EarthSci Product">
         <property
               name="appName"
               value="EarthSci Product">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="au.gov.ga.earthsci.ui.views.SampleView"
            icon="icons/sample.gif"
            id="au.gov.ga.earthsci.ui.views.SampleView"
            name="Sample View">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               standalone="true"
               minimized="false"
               relative="org.eclipse.ui.editorss"
               relationship="left"
               id="au.gov.ga.earthsci.ui.views.SampleView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
